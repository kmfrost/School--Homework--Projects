%% Constants
c         = 2.998e8; % (m/s)
epsln_0   = (1e-9/(36*pi));
u_0         = pi*4e-7;
f         = 100e6; % (100 MHz)
w         = 2*pi*f;

%% Code
alpha       = 100;
beta        = 100;
gamma       = alpha + 1j*beta;
etta        = sqrt((1j*w*u_1)/(sigma_1 + 1j*w*epsln_1));

epsln_r   = 0;
epsln     = epsln_0 * epsln_1r;
u_r       = 1;
u         = u_r*u_0;
sigma   = 5;
% gamma     = sqrt(1j * w * u * (sigma + 1j * w * epsln));
% etta      = sqrt((1j*w*u_1)/(sigma_1 + 1j*w*epsln_1));

%syms etta gamma w u sigma epsln
eqn1 = etta - sqrt((1j*w*u)/(sigma + 1j*w*epsln))
eqn2 = gamma - sqrt(1j * w * u * (sigma + 1j * w * epsln))
solset = solve(eqn1,eqn2, sigma,etta)



fprintf('a) Region 1:\n\talpha:\t%f\n\tbeta:\t%f\n\n',alpha_1,beta_1);

fprintf('b) Phasor Form of H-incident:\n');

syms z;
E0 = 2;
E  = [0;E0*exp(-alpha_1*z)*exp(-1j*beta_1*z);0] %Vector Form of E-incident
H  = cross((1/etta_1)*[0;0;1],E)


% Region 2
epsln_2  = 1;
sigma    = 0;
u_r      = 1;


